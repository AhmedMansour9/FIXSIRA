<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e1e1e1"
    android:id="@+id/Categories"
    tools:context="com.example.ic.fixera.Fragments.Categories_SparParts">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#4e4e4e"
            app:popupTheme="@style/PopupOverlay">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/searchh"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="@dimen/_30sdp"
            android:hint="@string/look"

            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textColor="#706a6a"
            android:background="@drawable/bsearch"
            android:singleLine="true"
            android:paddingRight="20dp"
            android:paddingLeft="@dimen/_10sdp"
            android:textColorHint="#706a6a"
            android:textStyle="italic"
            />

        <Button
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="#f58020"
            android:layout_toRightOf="@+id/searchh"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textAllCaps="false"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/search"
            android:textSize="@dimen/_18sdp"
            android:id="@+id/Btn_Search"
            />
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_Categories"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_height="match_parent">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_Categories"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>

</FrameLayout>
