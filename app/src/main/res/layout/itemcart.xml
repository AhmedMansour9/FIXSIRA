<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    app:cardBackgroundColor="@android:color/white"
    android:layout_margin="@dimen/_10sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_centerVertical="true"
        android:id="@+id/img_Cart"
        android:layout_marginLeft="@dimen/_10sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#706a6a"
        android:textStyle="bold"
        android:id="@+id/T_Name"
        android:layout_toRightOf="@+id/img_Cart"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_40sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#706a6a"
        android:layout_marginRight="@dimen/_10sdp"
        android:id="@+id/T_Price"
        android:layout_below="@+id/T_Name"
        android:layout_toRightOf="@+id/img_Cart"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        />
    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/T_Price"
        android:layout_toRightOf="@+id/img_Cart"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/minus"
        android:id="@+id/minus"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f58020"
        android:layout_marginTop="@dimen/_28sdp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/minus"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_below="@+id/T_Price"
        android:id="@+id/T_qount"
        />
    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/T_Price"
        android:layout_toRightOf="@+id/T_qount"
        android:layout_marginLeft="@dimen/_20sdp"
        android:src="@drawable/plus"
        android:layout_marginTop="@dimen/_20sdp"
        android:id="@+id/plus"
        />
</RelativeLayout>

</android.support.v7.widget.CardView>