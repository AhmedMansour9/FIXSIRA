<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    android:layout_margin="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#706a6a"
            android:layout_marginRight="@dimen/_10sdp"
            android:textStyle="bold"
            android:id="@+id/currency"
            android:text="@string/curency"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_30sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#706a6a"
            android:layout_toRightOf="@+id/currency"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/T_currency"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_30sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#706a6a"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/Price"
            android:text="@string/price"
            android:textStyle="bold"
            android:layout_below="@+id/T_currency"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#706a6a"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/T_Price"
            android:layout_toRightOf="@+id/Price"
            android:layout_below="@+id/T_currency"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#706a6a"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/date"
            android:text="@string/date"
            android:textStyle="bold"
            android:layout_below="@+id/T_Price"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#706a6a"
            android:layout_toRightOf="@+id/date"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/schedule_date"
            android:layout_below="@+id/T_Price"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#706a6a"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/status"
            android:text="@string/status"
            android:layout_below="@+id/schedule_date"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#706a6a"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/T_status"
            android:layout_toRightOf="@+id/status"
            android:textStyle="bold"
            android:layout_below="@+id/schedule_date"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            />
        <Button
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/T_status"
            android:background="#f58020"
            android:layout_marginTop="@dimen/_20sdp"
            android:textAllCaps="false"
            android:text="@string/revieworder"
            android:textSize="@dimen/_20sdp"
            android:id="@+id/ReviewOrder"
            android:visibility="invisible"
            android:layout_marginBottom="@dimen/_20sdp"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>