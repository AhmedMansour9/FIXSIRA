<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1e1e1">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="20dp"
        android:padding="@dimen/_10sdp"
        app:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="10dp"
        card_view:cardCornerRadius="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/person_image"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:src="@drawable/userphoto"
                android:visibility="visible"

                />
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/about"
                android:layout_below="@+id/person_image"
                android:id="@+id/abo"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#706a6a"
                android:layout_toRightOf="@+id/abo"
                android:layout_marginTop="@dimen/_23sdp"
                android:layout_below="@+id/person_image"
                android:id="@+id/about"
                android:textStyle="bold"
                android:text="@string/aboutus"
                />
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/service"
                android:layout_toRightOf="@+id/about"
                android:layout_below="@+id/person_image"
                android:id="@+id/servi"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#706a6a"
                android:layout_toRightOf="@+id/servi"
                android:layout_marginTop="@dimen/_23sdp"
                android:layout_below="@+id/person_image"
                android:id="@+id/service"
                android:textStyle="bold"
                android:text="@string/service"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#706a6a"
                android:layout_toRightOf="@+id/person_image"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:id="@+id/PlaceName"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#838282"
                android:layout_toRightOf="@+id/person_image"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_below="@+id/PlaceName"
                android:id="@+id/Address"
                />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/star"
                android:layout_below="@+id/Address"
                android:layout_toRightOf="@+id/person_image"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:id="@+id/Starone"
                android:visibility="gone"
                />
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/star"
                android:layout_below="@+id/Address"
                android:layout_toRightOf="@+id/Starone"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:id="@+id/Startwo"
                android:visibility="gone"
                />
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/star"
                android:layout_below="@+id/Address"
                android:layout_toRightOf="@+id/Startwo"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:id="@+id/Starthree"
                android:visibility="gone"

                />
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/star"
                android:layout_below="@+id/Address"
                android:layout_toRightOf="@+id/Starthree"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:id="@+id/StarFour"
                android:visibility="gone"

                />
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/star"
                android:layout_below="@+id/Address"
                android:layout_toRightOf="@+id/StarFour"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:id="@+id/StarFive"
                android:visibility="gone"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#706a6a"
                android:layout_below="@+id/about"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:text="@string/openplace"
                android:id="@+id/arrival"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#706a6a"
                android:layout_below="@+id/person_image"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_toRightOf="@+id/arrival"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/arrivaltime"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#706a6a"
                android:layout_below="@+id/arrival"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:text="@string/closeplace"
                android:id="@+id/place"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#706a6a"
                android:layout_below="@+id/arrival"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toRightOf="@+id/arrival"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/closeplace"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#706a6a"
                android:layout_below="@+id/place"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:text="@string/price"
                android:id="@+id/Price"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#706a6a"
                android:layout_below="@+id/place"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toRightOf="@+id/Price"
                android:layout_marginLeft="@dimen/_30sdp"
                android:id="@+id/T_Price"
                android:textStyle="bold"
                />

            <fragment
                android:id="@+id/maps"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_below="@+id/T_Price"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="#00000000"
                android:layout_height="@dimen/_140sdp"/>
            <Button
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/bgbuttons"
                android:layout_below="@+id/maps"
                android:textAllCaps="false"
                android:id="@+id/calldriver"
                android:text="@string/callPlace"
                android:textSize="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                />
            <Button
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/bgbuttons"
                android:layout_alignParentRight="true"
                android:text="@string/sendmessage"
                android:textAllCaps="false"
                android:textSize="@dimen/_13sdp"
                android:layout_below="@+id/maps"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_20sdp"
                />
        </RelativeLayout>




    </android.support.v7.widget.CardView>


</FrameLayout>
