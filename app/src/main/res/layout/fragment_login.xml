<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgregister"
    tools:context="com.example.ic.fixera.Fragments.Login">
    <ProgressBar
        android:id="@+id/progressBarlogin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#f68423"
        android:id="@+id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signin"
                android:layout_centerInParent="true"
                android:textSize="@dimen/_20sdp"
                android:textColor="#fff"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolbar"
        android:id="@+id/logo"
        android:layout_marginTop="@dimen/_30sdp"
        android:src="@drawable/logo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:layout_centerInParent="true"
        android:textSize="@dimen/_20sdp"
        android:textColor="#fff"
        android:id="@+id/textwelcome"
        android:layout_below="@+id/logo"
        android:layout_marginTop="@dimen/_20sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textsignin"
        android:layout_centerInParent="true"
        android:textSize="@dimen/_16sdp"
        android:textColor="#fff"
        android:id="@+id/textsignin"
        android:layout_below="@+id/textwelcome"
        android:layout_marginTop="@dimen/_10sdp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_below="@+id/textsignin"
        android:hint="@string/email"
        android:id="@+id/E_Email"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_below="@+id/E_Email"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:id="@+id/E_Password"
        />
    <Button
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@+id/E_Password"
        android:background="#f58020"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/signin"
        android:textSize="@dimen/_20sdp"
        android:id="@+id/Sign_IN"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create"
        android:layout_centerInParent="true"
        android:textSize="@dimen/_13sdp"
        android:textColor="#fff"
        android:id="@+id/textsignup"
        android:layout_below="@+id/Sign_IN"
        android:layout_marginTop="@dimen/_10sdp"
        />
</RelativeLayout>
