<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/view"
    app:cardBackgroundColor="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/img_Service"
            android:layout_marginLeft="@dimen/_10sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#706a6a"
            android:textStyle="bold"
            android:id="@+id/Name"
            android:text="@string/carName"
            android:layout_below="@+id/img_Service"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_20sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#706a6a"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/Name"
            android:id="@+id/T_Name"
            android:layout_below="@+id/img_Service"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#706a6a"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/price"
            android:text="@string/price"
            android:textStyle="bold"
            android:layout_below="@+id/Name"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_20sdp"
            />

        <TextView
            android:id="@+id/T_Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Name"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_toRightOf="@+id/price"
            android:textColor="#706a6a" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#706a6a"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/status"
            android:text="@string/status"
            android:textStyle="bold"
            android:layout_below="@+id/price"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_20sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#706a6a"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/T_status"
            android:layout_toRightOf="@+id/status"
            android:layout_below="@+id/price"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            />


        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressBackgroundTint="@color/yellow"
            android:progressTint="@color/yellow"
            android:layout_below="@+id/status"
            android:layout_marginTop="15dp"
            android:stepSize="1.0"
            android:layout_centerHorizontal="true"
            android:numStars="5"
            android:secondaryProgressTint="@color/yellow"
            android:rating="1" />
        <EditText
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/ratingBar"
            android:textColor="#000"
            android:paddingRight="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_centerHorizontal="true"
            android:id="@+id/comment"
            android:background="@drawable/bcwdittext"
             android:layout_marginTop="@dimen/_10sdp"
            />

        <Button
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/comment"
            android:background="#f58020"
            android:layout_marginTop="@dimen/_20sdp"
            android:textAllCaps="false"
            android:text="@string/submit"
            android:textSize="@dimen/_20sdp"
            android:id="@+id/Review"
            android:layout_marginBottom="@dimen/_20sdp"
            />

        <ProgressBar
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/progrossRating"
            android:visibility="gone"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    </ScrollView>
</android.support.v7.widget.CardView>