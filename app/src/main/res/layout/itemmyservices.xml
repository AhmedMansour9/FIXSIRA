<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_170sdp"
    app:cardBackgroundColor="@android:color/white"
    android:layout_margin="@dimen/_10sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_centerVertical="true"
            android:id="@+id/img_Cart"
            android:layout_marginLeft="@dimen/_10sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#706a6a"
            android:textStyle="bold"
            android:id="@+id/T_Name"
            android:layout_toRightOf="@+id/img_Cart"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#706a6a"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/T_sevice"
            android:layout_below="@+id/T_Name"
            android:layout_toRightOf="@+id/img_Cart"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#706a6a"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/T_CarName"
            android:layout_below="@+id/T_sevice"
            android:layout_toRightOf="@+id/img_Cart"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#706a6a"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/T_Price"
            android:layout_below="@+id/T_CarName"
            android:layout_toRightOf="@+id/img_Cart"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#706a6a"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/schedule_date"
            android:layout_below="@+id/T_Price"
            android:layout_toRightOf="@+id/img_Cart"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#706a6a"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/status"
            android:layout_below="@+id/schedule_date"
            android:layout_toRightOf="@+id/img_Cart"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            />



    </RelativeLayout>

</android.support.v7.widget.CardView>