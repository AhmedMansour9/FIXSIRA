<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1e1e1"
    android:clickable="true"
    android:id="@+id/Details_Frame">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="20dp"
        android:padding="@dimen/_10sdp"
        app:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="10dp"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/person_image"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/userphoto"
                android:visibility="visible"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#706a6a"
                android:layout_toLeftOf="@+id/person_image"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:id="@+id/PlaceName"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#838282"
                android:layout_toLeftOf="@+id/person_image"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_below="@+id/PlaceName"
                android:id="@+id/Address"
                android:layout_marginRight="@dimen/_15sdp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#706a6a"
                android:layout_below="@+id/person_image"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:text="@string/Phone"
                android:id="@+id/phone"
                android:textStyle="bold"
                />
            <EditText
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/bcwdittext"
                android:textColor="#706a6a"
                android:gravity="center_vertical"
                android:inputType="number"
                android:layout_below="@+id/person_image"
                android:layout_toLeftOf="@+id/phone"
                android:layout_marginRight="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/E_Phone"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#706a6a"
                android:layout_below="@+id/phone"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:text="@string/carName"
                android:id="@+id/carname"
                android:textStyle="bold"
                />
            <EditText
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:textColor="#706a6a"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:layout_below="@+id/phone"
                android:background="@drawable/bcwdittext"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_toLeftOf="@+id/carname"
                android:layout_marginRight="@dimen/_40sdp"
                android:id="@+id/E_CarName"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#706a6a"
                android:layout_below="@+id/carname"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:text="@string/carmodel"
                android:id="@+id/CarModel"
                android:textStyle="bold"
                />
            <EditText
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:textColor="#706a6a"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:layout_below="@+id/carname"
                android:background="@drawable/bcwdittext"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_toLeftOf="@+id/carname"
                android:layout_marginRight="@dimen/_40sdp"
                android:id="@+id/E_CarModel"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#706a6a"
                android:layout_below="@+id/CarModel"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:text="@string/year"
                android:id="@+id/year"
                android:textStyle="bold"
                />
            <EditText
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:textColor="#706a6a"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:layout_below="@+id/CarModel"
                android:background="@drawable/bcwdittext"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_toLeftOf="@+id/carname"
                android:layout_marginRight="@dimen/_40sdp"
                android:id="@+id/E_Year"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#706a6a"
                android:layout_below="@+id/year"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:text="@string/date"
                android:id="@+id/date"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:textColor="#706a6a"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:layout_below="@+id/year"
                android:background="@drawable/bcwdittext"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_toLeftOf="@+id/carname"
                android:layout_marginRight="@dimen/_40sdp"
                android:id="@+id/T_Date"
                android:textStyle="bold"
                />

            <Button
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/bgbuttons"
                android:textAllCaps="false"
                android:id="@+id/calldriver"
                android:text="@string/callPlace"
                android:layout_below="@+id/T_Date"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textSize="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                />
            <Button
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/bgbuttons"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/T_Date"
                android:text="@string/reservee"
                android:id="@+id/Reserve"
                android:textAllCaps="false"
                android:textSize="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                />
            <ProgressBar
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerInParent="true"
                android:id="@+id/Progross_Service"
                android:visibility="gone"
                />
        </RelativeLayout>




    </android.support.v7.widget.CardView>


</FrameLayout>
