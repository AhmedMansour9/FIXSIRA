                    android:layout_height="wrap_content"
                    android:text="@string/visitwashing"
                    android:textColor="#ce8227"
                    android:layout_below="@+id/E_Year"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_alignParentLeft="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mobileservice"
                    android:textColor="#ce8227"
                    android:layout_below="@+id/E_Year"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    />
                <Switch
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:id="@+id/switch1"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/E_Year"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:track="@drawable/switch_track_selector"
                    android:switchMinWidth="@dimen/_60sdp"
                    android:thumb="@drawable/switch_thumb_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/T_Price"
                    android:layout_below="@+id/switch1"
                    android:textColor="#ce8227"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:visibility="gone"
                    />
                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_below="@+id/T_Price"
                    android:hint="@string/date"
                    android:inputType="number"
                    android:id="@+id/T_Date"
                    android:maxLines="1"
                    android:textColor="#ce8227"
                    android:textColorHint="#ce8227"
                    android:drawableLeft="@drawable/year"
                    android:padding="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:enabled="false"
                    app:backgroundTint="#ce8227"
                    android:drawablePadding="@dimen/_10sdp"

