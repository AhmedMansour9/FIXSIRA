                    android:textColor="#ce8227"
                    android:textColorHint="#ce8227"
                    android:drawableLeft="@drawable/year"
                    android:padding="@dimen/_10sdp"
                    android:textStyle="bold"
                    app:backgroundTint="#ce8227"
                    android:drawablePadding="@dimen/_10sdp"

                    />
                <TextView
