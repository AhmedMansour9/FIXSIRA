                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_below="@+id/phone"
                    android:hint="@string/firstname"
                    android:maxLines="1"
                    android:textColor="#ce8227"
                    android:textColorHint="#ce8227"
                    android:id="@+id/E_CarName"
                    android:drawableLeft="@drawable/name"
                    android:padding="@dimen/_10sdp"
                    android:textStyle="bold"
                    app:backgroundTint="#ce8227"
                    android:drawablePadding="@dimen/_10sdp"

                    />

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:hint="@string/Phone"
                    android:id="@+id/E_Phone"
                    android:inputType="number"
                    android:textColor="#ce8227"
                    android:textColorHint="#ce8227"
                    android:textStyle="bold"
                    app:backgroundTint="#ce8227"
                    android:drawablePadding="@dimen/_10sdp"
                    android:maxLines="1"
                    android:layout_below="@+id/E_CarName"
                    />


                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_below="@+id/E_Phone"
                    android:hint="@string/carmodel"
                    android:id="@+id/E_CarModel"
                    android:textColor="#ce8227"
                    android:textColorHint="#ce8227"
                    android:maxLines="1"
                    android:drawableLeft="@drawable/modelcar"
                    android:padding="@dimen/_10sdp"
                    android:textStyle="bold"
                    app:backgroundTint="#ce8227"
                    android:drawablePadding="@dimen/_10sdp"

                    />
                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
